  {% from "./partials/components/dashboard/page-side.njk" import pageSide %}
  {% from "./partials/components/dashboard/input.njk" import dashInput %}
  {% from "./partials/components/table.njk" import table %}

  {%
    set side = {
      'title': 'FAQs',
      'itemList': [
        {
          'title': 'What is 2FA?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'How do I link an exchange?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'Can I create a new exchange account through CryptoSystem?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'What are exchange APIs?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'Do you offer a referral rewards program?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'Can I deposit or withdraw assets from CryptoSystem?',
          'link': 'javasript:void(0)',
          'accent': false
        }, {
          'title': 'Visit Support Center',
          'link': 'javasript:void(0)',
          'accent': true
        }
      ]
    }
  %}

  {%
    set inputList = [
      {
        'title': 'Current Password',
        'id': 'dashboard--current-password',
        'type': 'password',
        'placeholder': '*****'
      }, {
        'title': 'New Password',
        'id': 'dashboard--new-password',
        'type': 'password',
        'placeholder': '*****'
      }, {
        'title': 'Confirm Password',
        'id': 'dashboard--confirm-password',
        'type': 'password',
        'placeholder': '*****'
      }
    ]
  %}

  {%
  set logTable = {
    'striped': true,
    'head': {
      'class': [],
      'list': [
        'Activity',
        'Date/Time',
        'IP Address',
        'Location'
      ]
    },
    'body': [
