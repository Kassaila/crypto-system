{% from "./partials/components/icon.njk" import icon %}

{%
  set form = {
    id: 'create-acc'
  }
%}

{%
  set inputs = [
    {
      'name': form.id + '-' + 'user',
      'type': 'text',
      'icon': 'user',
      'placeholder': 'Enter Your Name'
    },
    {
      'name': form.id + '-' + 'email',
      'type': 'email',
      'icon': 'mail',
      'placeholder': 'Enter Your E-mail'
    },
    {
      'name': form.id + '-' + 'pass',
      'type': 'password',
      'icon': 'lock-open',
      'placeholder': 'Enter Your Password'
    },
    {
      'name': form.id + '-' + 'pass-repeat',
      'type': 'password',
      'icon': 'lock-open',
      'placeholder': 'Repeat Your Password'
    }
  ]
%}

<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>CryptoSystem - Create account</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>â‚¿</text></svg>"
/>
    {% include './partials/head/fonts.njk' %}
    {% include './partials/head/common.njk' %}
  </head>

  <body>
    <main class="cs--page cs--page--registration">
      <div class="cs--page__bg">
        <img src="./img/registration-bg.jpg" alt="">
      </div>
      <div class="cs--container">
        <div class="cs--page__wrapper">
          <a href="javascript: void(0)" class="cs--logo cs--logo-lg">
            <img src="./img/logo.png" alt="logo">
          </a>
          <h1 class="cs--page__title">Create your free account</h1>
          <form id="{{ form.id }}" class="cs--reg-form">
            {% for input in inputs %}
              <label for="{{ input.name }}" class="cs--reg-form__input-wrapper">
                {{ icon(input.icon) }}
                <input id="{{ input.name }}" type="{{ input.type }}" class="cs--reg-form__input" placeholder="{{ input.placeholder }}">
              </label>
            {% endfor %}
            <div class="cs--reg-form__term">
              <label for="create-acc-privacy" class="cs--reg-form__checkbox-wrapper">
                <input id="create-acc-privacy" type="checkbox" class="cs--reg-form__checkbox">
                {{ icon('check') }}
              </label>
              <div>I agree to the Terms of Service and have read and acknowledge the <a href="javascript: void(0)">
                  <b>Privacy Statement</b>
                </a>.</div>
            </div>
            <div class="cs--reg-form__recaptcha">
              {# This img for example #}
              <img src="./img/recaptcha.png" alt="">
            </div>
            <button type="submit" class="cs--btn cs--btn-grad-blue">Create Account</button>
          </form>
          <div class="cs--sing-in">
          Already have an account? <a href="javascript: void(0)">Sign in</a>
          </div>
        </div>
      </div>
    </main>
    {% include './partials/scripts/common.njk' %}
  </body>
</html>
