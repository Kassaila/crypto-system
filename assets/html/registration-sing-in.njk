{% from "./partials/components/icon.njk" import icon %}

{%
  set form = {
    id: 'sing-in'
  }
%}

{%
  set inputs = [
    {
      'name': form.id + '-' + 'email',
      'type': 'email',
      'icon': 'mail',
      'placeholder': 'Enter Your E-mail'
    },
    {
      'name': form.id + '-' + 'pass',
      'type': 'password',
      'icon': 'lock-open',
      'placeholder': 'Enter Your Password'
    }
  ]
%}

<!DOCTYPE html>
<html lang="en" >
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>CryptoSystem - Sign in to your account</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>â‚¿</text></svg>"
/>
    {% include './partials/head/fonts.njk' %}
    {% include './partials/head/common.njk' %}
  </head>

  <body>
    <div class="cs--preloader" data-preloader></div>
    <main class="cs--page cs--page--registration">
      <div class="cs--page__bg">
        <img src="./img/registration-bg.svg" alt="">
      </div>
      <div class="cs--container">
        <div class="cs--page__wrapper">
          <a href="javascript:void(0)" class="cs--logo cs--logo-lg">
            <img src="./img/logo.png" alt="logo">
          </a>
          <h1 class="cs--page__title">Sign in to your account</h1>
          <form id="{{ form.id }}" class="cs--reg-form">
            {% for input in inputs %}
              <label for="{{ input.name }}" class="cs--reg-form__input-wrapper">
                {{ icon(input.icon) }}
                <input id="{{ input.name }}" type="{{ input.type }}" class="cs--reg-form__input" placeholder="{{ input.placeholder }}">
              </label>
            {% endfor %}
            <button type="submit" class="cs--btn cs--btn-grad-blue">Sing In</button>
          </form>
          <div class="cs--form-support">
            <p>
              <a href="registration-forgot-pass.html">Forgot password?</a>
            </p>
            <p>Already have an account? <a href="registration-create-account.html">Sign Up</a>
            </p>
          </div>
        </div>
      </div>
    </main>
    {% include './partials/scripts/common.njk' %}
  </body>
</html>
