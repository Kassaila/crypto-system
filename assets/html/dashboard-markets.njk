  <body>
    <div class="cs--preloader" data-preloader></div>
    <div class="cs--page-wrapper">
      {% include './partials/components/landing/header.njk' %}
      <main class="cs--page cs--dashboard--markets">
        <div class="cs--container">
          <div>
            <h1 class="cs--page__title">Market Overview</h1>
            <div>
              <span>8757 Active pairs</span>
              <label for="card-filter-search" class="cs--card-filter__search-wrapper">
                <input type="text" class="cs--card-filter__search" placeholder="Search">
                <button type="button" class="cs--card-filter__search-btn">
                  {{ icon('search') }}
                </button>
              </label>
            </div>
          </div>
            <div class="cs--table-wrapper">
              <table class="cs--table cs--table--bordered">
                <thead>
                  <tr>
                    {% for name in marketTable.head.list %}
                      <th class="{{ marketTable.head.class[loop.index - 1] }}">{{ name }}</th>
                    {% endfor %}
                  </tr>
                </thead>
                <tbody>
                  {% for value in marketTable.body %}
                    <tr>
                      {% for name in marketTable.head.list %}
                        {% if loop.index == 2 %}
                          <td class="{{ value.class[loop.index - 1] }}">
                            <div class="cs--table__card">
                              <img src="{{ value.list[loop.index - 1].imgSrc }}" alt="">
                              <div class="cs--table__card-content">
                                <span class="cs--table__card-title">{{ value.list[loop.index - 1].crypto }}</span>
                                <span class="cs--table__card-abbr">{{ value.list[loop.index - 1].abbr }}</span>
                              </div>
                            </div>
                          </td>
                        {% elif loop.index == 8 %}
                          <td class="{{ value.class[loop.index - 1] }}">
                            <img src="{{ value.list[loop.index - 1] }}" alt="">
                          </td>
                        {% else %}
                          <td class="{{ value.class[loop.index - 1] }}">{{ value.list[loop.index - 1] }}</td>
                        {% endif %}
                      {% endfor %}
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
        </div>
      </main>
      {% include './partials/components/dashboard/footer.njk' %}
    </div>
